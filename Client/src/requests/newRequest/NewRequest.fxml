<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="560.0" maxWidth="430.0" minHeight="560.0" minWidth="430.0" prefHeight="560.0" prefWidth="430.0" stylesheets="@NewRequestStyle.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="requests.newRequest.NewRequestController">
   <children>
      <Label id="newRequestTitle" prefHeight="51.0" prefWidth="168.0" text="New Request" />
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="17.0" prefWidth="267.0" styleClass="newRequestLabels" text="Choose simulation: " />
            <ChoiceBox fx:id="simulationChoiceBox" prefHeight="25.0" prefWidth="138.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="645.0" spacing="30.0">
         <children>
            <Label prefHeight="17.0" prefWidth="280.0" styleClass="newRequestLabels" text="Choose the amount of simulation to run: " />
            <Spinner fx:id="simulationAmountSpinner" prefHeight="25.0" prefWidth="95.0" />
         </children>
      </HBox>
      <Label styleClass="newRequestLabels" text="Choose terminations: ">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="50.0">
         <children>
            <CheckBox fx:id="ticksSecondsCheckBox" mnemonicParsing="false" onAction="#ticksSecondsCheckBoxClicked" styleClass="newRequestsCheckBox" text="By ticks / seconds" />
            <CheckBox fx:id="userCheckBox" mnemonicParsing="false" onAction="#userCheckBoxClicked" styleClass="newRequestsCheckBox" text="By user" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="30.0">
         <children>
            <CheckBox fx:id="ticksCheckBox" mnemonicParsing="false" onAction="#ticksCheckBoxClicked" prefHeight="17.0" prefWidth="280.0" styleClass="newRequestsCheckBox" text="By ticks: " visible="false" />
            <Spinner fx:id="ticksSpinner" prefWidth="95.0" visible="false" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="30.0">
         <children>
            <CheckBox fx:id="secondsCheckBox" mnemonicParsing="false" onAction="#secondsCheckBoxClicked" prefHeight="17.0" prefWidth="280.0" styleClass="newRequestsCheckBox" text="By seconds: " visible="false" />
            <Spinner fx:id="secondsSpinner" prefWidth="95.0" visible="false" />
         </children>
      </HBox>
      <Pane prefHeight="52.0" prefWidth="430.0">
         <children>
            <Button id="newRequestSubmitButton" fx:id="submitButton" disable="true" layoutX="326.0" layoutY="9.0" mnemonicParsing="false" onAction="#submitButtonClicked" prefHeight="34.0" prefWidth="79.0" text="Submit" />
         </children>
      </Pane>
   </children>
   <padding>
      <Insets left="10.0" />
   </padding>
</VBox>
